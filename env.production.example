# Deep360 生产环境配置模板
# 复制此文件为 .env.production 并填入真实值

# 应用配置
NODE_ENV=production
PORT=3000
APP_NAME=Deep360
APP_URL=https://your-domain.com

# 数据库配置
MONGODB_URI=mongodb://mongodb:27017/deep360_prod
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password

# Redis 配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password

# JWT 配置
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=7d

# 安全配置
CORS_ORIGIN=https://your-frontend-domain.com
SESSION_SECRET=your_secure_session_secret
API_RATE_LIMIT=1000
AUTH_RATE_LIMIT=5

# 第三方服务配置
# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/webhooks/telegram

# Facebook Graph API (蓝标认证)
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_BUSINESS_ID=your_facebook_business_id

# AI 服务配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
CLAUDE_API_KEY=your_claude_api_key

# 短信服务配置
FIVESIM_API_KEY=your_5sim_api_key
SMS_ACTIVATE_API_KEY=your_sms_activate_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# 插件市场配置
PLUGIN_MARKETPLACE_URL=https://plugins.deep360.com
PLUGIN_MARKETPLACE_API_KEY=your_marketplace_api_key

# 邮件服务配置
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@your-domain.com

# 文件存储配置
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# 监控配置
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9464

# 性能配置
WORKER_PROCESSES=2
MAX_MEMORY_USAGE=1024
CACHE_TTL=3600

# SSL/TLS 配置
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 备份配置
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# 通知配置
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
WECHAT_WEBHOOK_URL=your_wechat_webhook_url

# 安全扫描
SNYK_TOKEN=your_snyk_token

# 监控服务
GRAFANA_PASSWORD=your_secure_grafana_password
PROMETHEUS_RETENTION=30d

# 时区设置
TZ=Asia/Shanghai